        <div class="card mb-4">
            <h5 class="card-header">Profile Details</h5>
            <!-- Account -->

            <hr class="my-0" />
            <div class="card-body">
                <form method="post" asp-controller="Doktor" asp-action="HastaKaydi" >
                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="firstName" class="form-label">Adı-Soyadı</label>
                            <input class="form-control"
                                   type="text"
                                   id="AdıSoyadı"
                                   asp-for="AdSoyad" class="form-control" />
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="inputPassword" class="col-sm-6 col-form-label " style="margin-bottom:10px">CİNSİYET</label><br />

                            <div class="form-check col-sm-1 form-check-inline" style="margin-left:0px">
                                <input class="form-check-input" asp-for="Cinsiyet" type="radio"  value="1" id="cinsiyet1">
                                <label class="form-check-label" for="inlineRadio5">Kadın</label>
                            </div>
                            <div class="form-check col-sm-1 form-check-inline" style="margin-left:70px">
                                <input class="form-check-input" asp-for="Cinsiyet" type="radio"  value="2" id="cinsiyet2">
                                <label class="form-check-label" for="inlineRadio6">Erkek</label>
                            </div>
                        </div>
                        @*<div class="mb-3 col-md-6">
                            <label>Tarih</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" id="datepicker" asp-for="DogumTarihi"  placeholder="aa-gg-yyyy"/>
                            </div>
                        </div>*@
                        <div  class="mb-3 col-md-6" >
                                <label for="html5-date-input" class="col-md-2 col-form-label">Tarih</label>
                                <div class="col-md-10">
                                    <input class="form-control" asp-for="DogumTarihi" type="date" id="DogumTarihi" />
                                </div>
                            </div>
                        <div class="mb-3 col-md-6">
                            <label for="DogumYeri" class="form-label">Doğum Yeri</label>
                            <select id="DogumYeri" class="select2 form-select" asp-for="DogumYeri">
                                 
                            </select>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label class="form-label" for="Boy">Boy</label>
                            <div class="input-group input-group-merge">
                                <input type="text"
                                       id="Boy"
                                       asp-for="Boy" class="form-control"
                                       placeholder="Örnek: 160" />
                                       
                                   
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label class="form-label" for="Kilo">Kilo</label>
                            <div class="input-group input-group-merge">
                                <input type="text"
                                       id="Kilo"
                                       asp-for="Kilo" class="form-control"
                                       placeholder="Örnek: 52" />
                                       
                                   
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="YasadıgıSehir" class="form-label">YAŞADIĞI ŞEHİR</label>
                            <select id="YaşadıgıSehir" placeholder="Hastanın Yaşadığı Şehri Seçiniz" class="select2 form-select" asp-for="YasadigiSehir">

                                <option value="en">İzmir</option>
                                <option value="fr">Ankara</option>
                                <option value="de">İstanbul</option>
                                <option value="pt">Edirne</option>
                            </select>
                        </div>
                        <div class="mb-3 ">
                            <label for="inputPassword" class="col-sm-6 col-form-label " style="margin-bottom:10px">ANJİYOÖDEM TİPİ</label>

                            <div class="form-check col-sm-1 form-check-inline">
                                <input class="form-check-input" asp-for="AnjiyoodemTipi" type="radio"  value="8" id="AnjiyoodemTipi1">
                                <label class="form-check-label" for="AnjiyoodemTipi1">Tip 1</label>
                            </div>
                            <div class="form-check col-sm-1 form-check-inline">
                                <input class="form-check-input" asp-for="AnjiyoodemTipi" type="radio"  value="9" id="AnjiyoodemTipi2">
                                <label class="form-check-label" for="AnjiyoodemTipi2">Tip 2</label>
                            </div>
                            <div class="form-check col-sm-1 form-check-inline">
                                <input class="form-check-input" asp-for="AnjiyoodemTipi" type="radio"  value="10" id="AnjiyoodemTipi3">
                                <label class="form-check-label" for="AnjiyoodemTipi3">Tip 3</label>
                            </div>
                            <div class="form-check col-sm-1 form-check-inline">
                                <input class="form-check-input" asp-for="AnjiyoodemTipi" type="radio"  value="11" id="AnjiyoodemTipi4">
                                <label class="form-check-label" for="AnjiyoodemTipi4">Tip 4</label>
                            </div>

                        </div>
                        <hr class="m-0" />
                        <div class="row">
                           <div class="mb-3 col-md-6">
                            <label for="inputPassword" class="col-sm-6 col-form-label " style="margin-bottom:10px">ANNE-BABA AKRABALIĞI</label><br />

                            <div class="form-check col-sm-1 form-check-inline" style="margin-left:0px">
                                <input class="form-check-input" asp-for="AnneBabaAkrabalik" type="radio"  value="true" id="AnneBabaAkrabalıgı1" onclick=myFunc(AnneBabaAkrabalıgı1,DereceDiv)>
                                <label class="form-check-label" for="AnneBabaAkrabalıgı1">Evet</label>
                            </div>
                            <div class="form-check col-sm-1 form-check-inline" style="margin-left:70px">
                                <input class="form-check-input" asp-for="AnneBabaAkrabalik" type="radio"  value="false" id="AnneBabaAkrabalıgı2" onclick=myFunc(AnneBabaAkrabalıgı1,DereceDiv)>
                                <label class="form-check-label" for="AnneBabaAkrabalıgı2">Hayır</label>
                            </div>
                            </div>
                            <div id="DereceDiv" class="mb-3 col-md-6" style="display:none">
                           <label for="Kilo" style="margin-bottom:10px" class="form-label">DERECESİ </label>
                            <input type="text" class="form-control" asp-for="AnneBabaAkrabalikDerece" id="Derece"  placeholder="örnek: Amca kızı" />
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="col-sm-6 col-form-label " style="margin-bottom:10px">ANNEANNE-DEDE AKRABALIĞI</label><br />

                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:0px">
                                    <input class="form-check-input" asp-for="AnneanneDedeAkrabalik" type="radio"  value="true" id="AnneanneDedeAkrabalıgı1">
                                    <label class="form-check-label" for="AnneanneDedeAkrabalıgı1">Evet</label>
                                </div>
                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:70px">
