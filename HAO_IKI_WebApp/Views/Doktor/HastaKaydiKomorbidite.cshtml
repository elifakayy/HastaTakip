<div class="col-xl-12">
    <div class="mb-3 ">
        <form method="post" asp-controller="Doktor" asp-action="HastaKaydiKomorbidite">
        <div class="table-responsive" style="height:300px">
            <table class="table table-striped table-borderless border-bottom">

                <tbody>
                    <tr class="table-secondary">
                        <td class="text-nowrap">EŞLİK EDEN HASTALIK</td>
                        <td>
                            <div class="form-check col-sm-1 form-check-inline" style="margin-left:30px">
                                <input class="form-check-input" type="radio" asp-for="EslikEdenHastalik" value="true" id="EslikEdenHastalik1" onclick=myFunc(EslikEdenHastalik1,eslikEdenHastalikDiv)>
                                <label class="form-check-label" for="EslikEdenHastalik1">Evet</label>
                            </div>
                        </td>
                        <td>
                            <div class="form-check col-sm-1 form-check-inline" style="margin-left:70px">
                                <input class="form-check-input" type="radio" asp-for="EslikEdenHastalik" value="false" id="EslikEdenHastalik2" value="option2" onclick=myFunc(EslikEdenHastalik1,eslikEdenHastalikDiv)>
                                <label class="form-check-label" for="EslikEdenHastalik2">Hayır</label>
                            </div>
                        </td>
                        <td id="eslikEdenHastalikDiv">
                            <div class="mb-3 col-md-6">


                                @*<select multiple class="chosen-select" name="test" required>
                                    <option value="67">Diyabet</option>
                                    <option value="68">Hipertansiyon</option>
                                    <option value="69">Kalp Yetmezliği</option>
                                    <option value="70">Nörolojik Hastalık</option>
                                    <option value="71">Böbrek Yetmezliği</option>
                                    <option value="72">Tiroid</option>
                                    <option value="73">Solunum(Astım, KOAH, ...)</option>
                                    <option value="74">Psikiyatrik Hastalık</option>
                                    <option value="75">Genetik </option>
                                </select>*@

                                @Html.Partial("EslikEdenHastalik")
                            </div>
                            
                        </td>
                        <div class="mb-3 col-md-6">
                                <label for="organization" class="form-label">DİĞER</label>
                                <input type="text" class="form-control" asp-for="HastalikDiger" />
                            </div>

                    </tr>
                </tbody>
            </table>

            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <button type="reset" class="btn btn-outline-secondary">Vazgeç</button>
            </div>

        </div>
        </form>

    </div>

</div>



