                                    <label class="form-check-label" for="AileOykusu1">Evet</label>
                                </div>
                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:70px">
                                    <input class="form-check-input" asp-for="AileOykusu" type="radio"  value="false" id="AileOykusu2">
                                    <label class="form-check-label" for="AileOykusu2">Hayır</label>
                                </div>

                            </div>
                            <div class="mb-3">
                                <label for="inputPassword" class="col-sm-6 col-form-label " style="margin-bottom:10px">AİLEDE LARİNGEAL ATAĞA BAĞLI ÖLÜM</label><br />

                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:0px">
                                    <input class="form-check-input" asp-for="AiledeLarengealAtagaBagliOlum" type="radio"  value="true" id="AiledeLarengialAtagaBaglıOlum1">
                                    <label class="form-check-label" for="AiledeLarengialAtagaBaglıOlum1">Evet</label>
                                </div>
                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:70px">
                                    <input class="form-check-input" asp-for="AiledeLarengealAtagaBagliOlum" type="radio"  value="false" id="AiledeLarengialAtagaBaglıOlum2">
                                    <label class="form-check-label" for="AiledeLarengialAtagaBaglıOlum2">Hayır</label>
                                </div>

                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label" for="SemptomBaslamaYasi">SEMPTOM BAŞLAMA YAŞI</label>
                                <div class="input-group input-group-merge">
                                    <input type="text"
                                           id="SemptomBaslamaYasi"
                                           class="form-control"
                                           asp-for="SemptomBaslamaYili"
                                           placeholder="Örnek: 32" />
                                </div>
                            </div>
                            <div class="mb-3 col-md-4">
                                <label class="form-label" for="TaniYasi">TANININ KOYULDUĞU YIL</label>
                                <div class="input-group input-group-merge">
                                    <input type="text"
                                           id="TanininKoyulduguYil"
                                           name="TanininKoyulduguYil"
                                           class="form-control"
                                           asp-for="TanininKoyulduguYil"
                                           placeholder="Örnek: 2001" />
                                </div>
                            </div>
                            <div class="mb-3 ">
                                <label for="ÇalismaDurumu" class="col-sm-6 col-form-label " style="margin-bottom:10px">ÇALIŞMA DURUMU</label><br />

                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:0px">
                                    <input class="form-check-input" asp-for="CalismaDurumu" type="radio"  value="5" id="CalismaDurumu1" >
                                    <label class="form-check-label" for="CalismaDurumu1">İzlemde</label>
                                </div>
                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:30px">
                                    <input class="form-check-input" asp-for="CalismaDurumu" type="radio"  value="6" id="CalismaDurumu2">
                                    <label class="form-check-label" for="ÇalismaDurumu2">İzlem Kaybı</label>
                                </div>
                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:30px">
                                    <input class="form-check-input" asp-for="CalismaDurumu" type="radio"  value="7" id="CalismaDurumu3">
                                    <label class="form-check-label" for="CalismaDurumu3">Çalışmadan Ayrıldı</label>
                                </div>

                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="col-sm-6 col-form-label " style="margin-bottom:10px">HASTA SON DURUM</label><br />

                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:0px">
                                    <input class="form-check-input" asp-for="HastaSonDurum" type="radio"  value="3" id="HastaSonDurum1" onclick=myFunc(HastaSonDurum2,OlumTarihiDiv)>
                                    <label class="form-check-label" for="HastaSonDurum1">Sağ</label>
                                </div>
                                <div class="form-check col-sm-1 form-check-inline" style="margin-left:70px">
                                    <input class="form-check-input" asp-for="HastaSonDurum" type="radio"  value="4" id="HastaSonDurum2" onclick=myFunc(HastaSonDurum2,OlumTarihiDiv)>
                                    <label class="form-check-label" for="HastaSonDurum2">Ölü</label>
                                </div>

                            </div>
                            <div id="OlumTarihiDiv" class="mb-3 col-md-6" style="display:none">
                                <label for="html5-date-input" class="col-md-2 col-form-label">ÖLÜM TARİHİ</label>
                                <div class="col-md-10">
                                    <input class="form-control" asp-for="HastaSonDurumOlumTarihi" type="date" id="OlumTarihi" />
                                </div>
                            </div>

                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                            <button type="reset" class="btn btn-outline-secondary">Vazgeç</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /Account -->
        </div>
    </div>
</div>

